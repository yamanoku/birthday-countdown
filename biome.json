{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "vcs": {
    "defaultBranch": "main"
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["**/*.ts", "**/*.tsx"],
    "ignore": ["node_modules", "dist", "*.d.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
