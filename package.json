    "@hono/vite-dev-server": "0.23.0",
    "@tailwindcss/vite": "4.1.16",
    "tailwindcss": "4.1.16",
    "vite": "^7.0.0",
    "vitest": "^4.0.0",
    "wrangler": "4.45.4"
  },
  "author": "yamanoku",
  "license": "MIT",
