{
  "name": "yamanoku-birthday-countdown",
  "version": "8.0.0",
  "description": "yamanoku birthday countdown app",
  "main": "none",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "npm run build && wrangler deploy",
    "biome": "biome check --write .",
    "biome:ci": "biome ci .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "hono": "^4.2.3",
    "honox": "^0.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@cloudflare/workers-types": "4.20251014.0",
