{
  "name": "birthday-countdown-js",
  "version": "4.1.0",
  "description": "birthday countdown javascript",
  "main": "none",
  "scripts": {
    "lint": "eslint src/countdown.ts",
    "build": "tsc -b",
    "watch": "tsc -w",
    "serve": "browser-sync start --serveStatic 'src/' --server --files 'build/*.js, src/index.html'"
  },
  "author": "yamanoku",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "browser-sync": "2.26.7",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.0.1",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "typescript": "3.7.4"
  },
  "lint-staged": {
    "src/*.ts": [
      "lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamanoku/birthday-countdown-js.git"
  },
  "keywords": [
    "birthday",
    "countdown",
    "ES2015",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/yamanoku/birthday-countdown-js/issues"
  },
  "homepage": "https://github.com/yamanoku/birthday-countdown-js#readme",
  "husky": {
    "hooks": {
      "post-merge": "(git diff 'HEAD@{1}' --name-only | grep package.json > /dev/null) && yarn || :",
      "pre-commit": "yarn lint"
    }
  }
}
