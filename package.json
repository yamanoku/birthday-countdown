{
  "name": "birthday-countdown-js",
  "version": "4.1.0",
  "description": "birthday countdown javascript",
  "main": "none",
  "scripts": {
    "lint": "eslint src/countdown.ts",
    "build": "tsc -b",
    "watch": "tsc -w",
    "serve": "browser-sync start --serveStatic 'src/' --server --files 'build/*.js, src/index.html'",
    "prettier": "prettier **/*.{ts,js}"
  },
  "author": "yamanoku",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "browser-sync": "2.26.14",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  },
  "lint-staged": {
    "src/*.ts": [
      "lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamanoku/birthday-countdown-js.git"
  },
  "keywords": [
    "birthday",
    "countdown",
    "ES2015",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/yamanoku/birthday-countdown-js/issues"
  },
  "homepage": "https://github.com/yamanoku/birthday-countdown-js#readme",
  "husky": {
    "hooks": {
      "post-merge": "(git diff 'HEAD@{1}' --name-only | grep package.json > /dev/null) && npm ci || :",
      "pre-commit": "npm run prettier && npm run lint"
    }
  }
}
